<?xml version="1.0" encoding="UTF-8"?>
<annotationscheme>
 <attribute id="sentiment_polarity" name="polarity" type="nominal_button"
	    text="Polarity of sentiment">
  <value id="value_s_polarity_pos" name="positive"/>
  <value id="value_s_polarity_neg" name="negative" next="sentiment_sarcasm"/>
 </attribute>

 <attribute id="sentiment_sarcasm" name="sarcasm" type="nominal_button"
	    text="Boolean value marking whether given sentiment is a sarcasm">
  <value id="value_sentiment_sarcasm_false" name="false"/>
  <value id="value_sentiment_sarcasm_true"  name="true"/>
 </attribute>

 <attribute id="sentiment_intensity" name="intensity" type="nominal_button" text="Intensity of sentiment">
  <value id="value_sentiment_intensity_1" name="1"/>
  <value id="value_sentiment_intensity_0" name="0"/>
  <value id="value_sentiment_intensity_2" name="2"/>
 </attribute>
</annotationscheme>
